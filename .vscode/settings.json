{
  "[jinja-sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[sql]": {
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "black-formatter.args": ["--config", "pyproject.toml"],
  "dbt.enableNewLineagePanel": true,
  "dbt.lineage.defaultExpansion": 3,
  "dbt.perspectiveTheme": "Pro Dark",
  "editor.codeActionsOnSave": {
    "source.fixAll.sortJSON": "always"
  },
  "editor.renderWhitespace": "all",
  "editor.rulers": [100],
  "files.associations": {
    "**/dbt_analytics/**/*.sql": "jinja-sql",
    ".yml": "jinja-yaml"
  },
  "files.exclude": {
    "**/.pytest_cache": true,
    "**/__pycache__": true
  },
  "isort.args": ["--settings-path=pyproject.toml"],
  "isort.check": true,
  "postman.telemetry.enabled": false,
  "pre-commit-helper.config": ".pre-commit-config.yaml",
  "pre-commit-helper.runOnSave": "none",
  "pylint.args": ["--rcfile=pyproject.toml"],
  "python.analysis.extraPaths": ["${workspaceFolder}/duckdb_analytics"],
  "python.autoComplete.extraPaths": ["${workspaceFolder}/duckdb_analytics"],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.envFile": "${workspaceFolder}/.env",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.cwd": "${workspaceFolder}/tests",
  "python.testing.pytestArgs": [],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "sortJSON.contextMenu": {
    "sortJSONAlphaNum": false,
    "sortJSONAlphaNumReverse": false,
    "sortJSONKeyLength": false,
    "sortJSONKeyLengthReverse": false,
    "sortJSONReverse": false,
    "sortJSONType": false,
    "sortJSONTypeReverse": false,
    "sortJSONValues": false,
    "sortJSONValuesReverse": false
  },
  "sqlfluff.config": ".sqlfluff",
  "sqlfluff.executablePath": "${workspaceFolder}/.venv/bin/sqlfluff",
  "sqlfluff.linter.run": "onType",
  "yaml.format.enable": false,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/dbt-labs/dbt-jsonschema/main/schemas/latest/dbt_project-latest.json": [
      "/dbt_analytics/dbt_project.yml"
    ],
    "https://raw.githubusercontent.com/dbt-labs/dbt-jsonschema/main/schemas/latest/dbt_yml_files-latest.json": [
      "/dbt_analytics/**/*.yml",
      "!profiles.yml",
      "!dbt_project.yml",
      "!packages.yml",
      "!package-lock.yml",
      "!selectors.yml",
      "!profile_template.yml"
    ],
    "https://raw.githubusercontent.com/dbt-labs/dbt-jsonschema/main/schemas/latest/packages-latest.json": [
      "/dbt_analytics/packages.yml"
    ],
    "https://raw.githubusercontent.com/dbt-labs/dbt-jsonschema/main/schemas/latest/selectors-latest.json": [
      "/dbt_analytics/selectors.yml"
    ]
  }
}
