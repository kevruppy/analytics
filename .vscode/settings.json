{
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "[yml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "dbt.enableNewLineagePanel": true,
  "dbt.perspectiveTheme": "Pro Dark",
  "editor.codeActionsOnSave": {
    "source.fixAll.sortJSON": "always"
  },
  "files.associations": {
    "**/dbt_analytics/**/*.sql": "jinja-sql",
    ".yml": "jinja-yaml"
  },
  "isort.check": true,
  "python.defaultInterpreterPath": "/workspaces/analytics/.venv/bin/python",
  "python.envFile": "/workspaces/analytics/.env",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "sortJSON.excludedPaths": ["/workspaces/analytics/dbt_templates"],
  "sqlfluff.config": "/workspaces/analytics/.sqlfluff",
  "sqlfluff.executablePath": "/workspaces/analytics/.venv/bin/sqlfluff",
  "sqlfluff.linter.run": "onType",
  "yaml.format.enable": false,
  "yaml.schemas": {
    "/workspaces/analytics/dbt_templates/models/properties_schema.json": [
      "/workspaces/analytics/dbt_analytics/models/**/_*.yml"
    ],
    "/workspaces/analytics/dbt_templates/seeds/properties_schema.json": [
      "/workspaces/analytics/dbt_analytics/seeds/**/_*.yml"
    ]
  }
}
